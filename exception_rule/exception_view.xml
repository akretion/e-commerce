<?xml version="1.0" ?>
<openerp>
    <data>

        <record id="view_exception_tree" model="ir.ui.view">
            <field name="model">exception.rule</field>
            <field name="arch" type="xml">
                <tree string="Exception">
                    <field name="active"/>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="model"/>
                    <field name="sequence"/>
                </tree>
            </field>
        </record>

        <record id="view_exception_form" model="ir.ui.view">
            <field name="model">exception.rule</field>
            <field name="arch" type="xml">
                <form string="Exception Setup">
                    <group name='name' colspan="4" col="2">
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                    <group name="configuration" col="4" colspan="4" groups="base.group_sale_manager">
                        <field name="active"/>
                        <field name="sequence"/>
                        <group colspan="4" col="2" groups="base.group_system">
                            <field name="model"/>
                            <field name="code"/>
                        </group>
                        <field name="email_template_id"/>
                    </group>
                </form>
            </field>
        </record>

    </data>
</openerp>
